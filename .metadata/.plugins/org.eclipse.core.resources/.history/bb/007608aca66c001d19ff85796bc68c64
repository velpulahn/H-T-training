package com.hco.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.hco.entity.HCOUser;
import com.hco.entity.Users;
import com.hco.exception.UserException;
import com.hco.repo.UsersRepository;
import com.hco.service.UsersService;

@RestController
@RequestMapping("/api/v1/healthcare/users")
public class UsersController {

	@Autowired
	private UsersService service;
	
	@Autowired
	private UsersRepository repo;


	
	@PostMapping()
	public Users saveUser(@RequestBody Users user) {
		return service.saveUser(user);
	}

	@GetMapping("/{userId}")
	public Users getUserById(@PathVariable int userId) throws UserException {
		return service.getUserById(userId);
	}

	@GetMapping("/findAll")
	public List<Users> findAll() {
		return service.getAllUsers();
	}
	
//	@GetMapping("/{userId}")
//	public Users getRoleByUserId(@PathVariable int userId) {
//		return repo.getRoleByUserId(userId);
//	}
	
	@PostMapping("/api/v1/healthcare/hcouser/{userId}/register")
	HCOUser saveUserDetails(int userId, HCOUser hcoUser) throws UserException{
		
	}
}
